{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "exoplanets-app",
  "version": "0.1.0",
  "identifier": "com.exoplanets.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://192.168.1.76:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Exoplanets Explorer",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' http://192.168.1.76:8080 http://192.168.1.76:9000;"    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
  
}
